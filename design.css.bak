#content #about_me img {
	width: 18vw;
	/*margin: 170px 250px 0px 20px;*/
}

#content #content_ {
	height: 1000px;
	background-color: green;
	border-top: 3px solid darkgreen;
	padding: 1px;
	z-index: -2;
}

#content #content_ h1 {
	text-align: center;
	color: silver;
	font-size: 8vw;
	margin: 4em;
}

@media (max-width: 750px) {
	#nav {
		height: 60px;
	}
	
	#nav #logo {
		margin: 30px;
		line-height: 60px;
	}
	
	.checkbtn {
		display: block;
	}
	
	#nav ul {
		float: none;
		position: fixed;
		background-color: darkgreen;
		width: 100%;
		height: 100vh;
		text-align: center;
		left: 200%;
		transition: all 0.5s;
	}
	
	#nav ul li {
		display: block;
		margin: 50px 0;
	}
	
	#nav ul li a {
		font-size: 20px;
	}
	
	#nav ul li a:hover {
		background: none;
		color: limegreen;
	}
	
	#check:checked ~ ul {
		left: 0;
	}
	
	#content #about_me {
		width: 90vw;
		height: 50vw;
		position: relative;
		margin: 0 auto;
		padding: 11vw 7vw;
		border: 1px solid darkgreen;
	}
	
	#content #about_me h1 {
		font-size: 5vw;
	}
	
	#content #about_me h1 p {
		width: 50vw;
		margin-top: 0.1vw;
		font-size: 3vw;
	}
	
	#content #about_me h1 a {

		margin-top: 0.5vw;
		font-size: 3vw;
	}
	
	#content #about_me img {
		width: 24vw;
	}
}
