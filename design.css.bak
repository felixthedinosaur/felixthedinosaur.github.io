* {
	padding: 0px;
	margin: 0px;
	box-sizing: border-box;
}

#nav {
	background-color: green;
	width: 100%;
	height: 80px;
	position: sticky;
	top: 0;
	font-family: sans-serif;
	border-bottom: 4px solid darkgreen;
	z-index: 1;
}

#nav #logo {
	color: white;
	font-size: 30px;
	line-height: 80px;
	margin: 100px;
	font-weight: bold;
}

#nav ul {
	float: right;
	list-style: none;
	margin-right: 50px;
}

#nav ul li {
	display: inline-block;
	margin: 0 10px;
	position: relative;
}

#nav ul li a {
	text-decoration: none;
	color: white;
	font-size: 18px;
	line-height: 80px;
	padding: 12px 12px;
	border-radius: 5px;
	text-transform: uppercase;
	cursor: pointer;
}

#nav ul li a:hover {
	background-color: limegreen;
	transition: 0.5s;
}

#nav ul li ul {
	display: none;
	position: absolute;
	background-color: darkgreen;
	border-radius: 0px 0px 12px 12px;
}

#nav ul li ul li {
	float: left;
	min-width: 200px;
	margin: -10px 15px;
}

#nav ul #socialmedia ul li {
	min-width: 147px;
}

#nav ul li ul li a {
	font-size: 15px;
	padding: 12px 14px;
	text-transform: none;
}

#nav ul li ul li a:hover {
	background-color: darkgreen;
	text-decoration: underline;
}

#nav ul li:hover ul {
	display: block;
	transition: 0.5s;
}

#check {
	display: none;
}

.checkbtn {
	color: white;
	font-size: 30px;
	float: right;
	line-height: 60px;
	margin-right: 30px;
	cursor: pointer;
	display: none;
}

@media (max-width: 1140px) {
	#nav #logo {
		font-size: 25px;
		margin: 80px;
	}
	
	#nav ul {
		margin-right: 30px;
	}
	
	#nav ul li {
		margin: 0 3px;
	}
	
	#nav ul li a {
		font-size: 16px;
	}
	
	#nav ul li ul li {
		margin: -10px 7px;
	}
	
	#nav ul li ul li a {
		font-size: 18px;
	}
}

@media (max-width: 940px) {
	/*#nav {
		height: 100px;
	}*/
	
	#nav #logo {
		font-size: 20px;
		margin: 60px;
		/*line-height: 100px;*/
	}
	
	#nav ul {
		margin-right: 10px;
	}
	
	#nav ul li {
		margin: 0 1px;
	}
	
	#nav ul li a {
		font-size: 14px;
		/*line-height: 100px;*/
	}
	
	#nav ul li ul li {
		margin: -20px 5px;
	}
	
	#nav ul li ul li a {
		font-size: 14px;
	}
}

#content {
	/*height: 150vh;*/
	/*background-color: green;*/
}

.container_limegreen {
    background-color: limegreen;
    z-index: -1;
}

#content #about_me {
	color: white;
	width: 85vw;
	height: 40vw;
	position: relative;
	margin: 0 auto;
	padding: 9vw 10vw;
	border: 1px solid black;
}

#content #about_me h1 {
	/*background-color: black;
	position: absolute;
	top: 180px;
	left: 20%;*/
	float:left;
	/*margin: 190px 40px 0px 420px;*/	
	font-size: 4vw;
}

#content #about_me h1 p {
	width: 45vw;
	margin-top: 0.1vw;
	font-size: 2vw;
}

#content #about_me h1 a {
	background-color: lightgreen;
	color: brown;
	text-decoration: none;
	margin-top: 1vw;
	padding: 0.5vw 1vw;
	border-radius: 0.5vw;
