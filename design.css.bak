* {
	padding: 0px;
	margin: 0px;
	box-sizing: border-box;
}

#nav {
	background-color: green;
	width: 100%;
	height: 80px;
	position: sticky;
	top: 0;
	font-family: sans-serif;
}

#nav #logo {
	color: white;
	font-size: 30px;
	line-height: 80px;
	margin: 100px;
	font-weight: bold;
}

#nav ul {
	float: right;
	list-style: none;
	margin-right: 50px;
}

#nav ul li {
	float: right;
	margin: 0 10px;
}

#nav ul li a {
	text-decoration: none;
	color: white;
	font-size: 18px;
	line-height: 80px;
	padding: 7px 12px;
	border-radius: 3px;
	text-transform: uppercase;
}

#nav ul li a:hover {
	background-color: limegreen;
	transition: 0.5s;
}

@media (max-width: 1050px) {
	#nav #logo {
		font-size: 25px;
		margin: 80px;
	}
	
	#nav ul {
		margin-right: 30px;
	}
	
	#nav ul li {
		margin: 0 3px;
	}
	
	#nav ul li a {
		font-size: 16px;
	}
}

@media (max-width: 850px) {
	#nav #logo {
		font-size: 20px;
		margin: 60px;
	}
	
	#nav ul {
		margin-right: 10px;
	}
	
	#nav ul li {
		margin: 0 1px;
	}
	
	#nav ul li a {
		font-size: 14px;
	}
}

h1 {
	text-align: center;
	color: silver;
	font-size: 5em;
	margin: 40px;
}