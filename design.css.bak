* {
	padding: 0px;
	margin: 0px;
	box-sizing: border-box;
}

#nav {
	background-color: green;
	width: 100%;
	height: 80px;
	position: sticky;
	top: 0;
	font-family: sans-serif;
	border-bottom: 4px solid darkgreen;
}

#nav #logo {
	color: white;
	font-size: 30px;
	line-height: 80px;
	margin: 100px;
	font-weight: bold;
}

#nav ul {
	float: right;
	list-style: none;
	margin-right: 50px;
}

#nav ul li {
	float: right;
	margin: 0 10px;
	position: relative;
}

#nav ul li a {
	text-decoration: none;
	color: white;
	font-size: 18px;
	line-height: 80px;
	padding: 12px 12px;
	border-radius: 5px;
	text-transform: uppercase;
	cursor: pointer;
}

#nav ul li a:hover {
	background-color: limegreen;
	transition: 0.5s;
}

#nav ul li ul {
	display: none;
	position: absolute;
	background-color: darkgreen;
	border-radius: 0px 0px 12px 12px;
}

#nav ul li ul li {
	float: left;
	min-width: 200px;
	margin: -10px 15px;
}

#nav ul #socialmedia ul li {
	min-width: 147px;
}

#nav ul li ul li a {
	font-size: 15px;
	padding: 12px 14px;
	text-transform: none;
}

#nav ul li ul li a:hover {
	background-color: darkgreen;
	text-decoration: underline;
}

#nav ul li:hover ul {
	display: block;
	transition: 0.5s;
}

@media (max-width: 1140px) {
	#nav #logo {
		font-size: 25px;
		margin: 80px;
	}
	
	#nav ul {
		margin-right: 30px;
	}
	
	#nav ul li {
		margin: 0 3px;
	}
	
	#nav ul li a {
		font-size: 16px;
	}
	
	#nav ul li ul li {
		margin: -10px 7px;
	}
	
	#nav ul li ul li a {
		font-size: 18px;
	}
}

@media (max-width: 940px) {
	#nav {
		height: 100px;
	}
	
	#nav #logo {
		font-size: 20px;
		margin: 60px;
		line-height: 100px;
	}
	
	#nav ul {
		margin-right: 10px;
	}
	
	#nav ul li {
		margin: 0 1px;
	}
	
	#nav ul li a {
		font-size: 14px;
		line-height: 100px;
	}
	
	#nav ul li ul li {
		margin: -20px 5px;
	}
	
	#nav ul li ul li a {
		font-size: 14px;
	}
}

